{% if content.id %}
    <a class="anchor" id="{{ content.id }}"></a>
{% endif %}
<div class="container-fluid py-5">
    <h2 class="text-center mt-5">
        {{ content.headline }}<br>
        <small>{{ content.subheadline }}</small>
    </h2>

    {% for post in content.posts %}
        {% set post = post.post ?? post %}
    {% if (loop.index0 % content.column_count) == 0 %}<div class="row mt-5">{% endif %}
        <div class="col-sm-4">
            <div class="card border-0">
                <img class="card-img-top" src="{{ post.thumbnail }}" alt="Bunte Pinsel">
                <div class="card-body px-3">
                    <h5 class="card-title">{{ post.title }}</h5>
                    <p class="card-text">
                        {{ post.content_short }}
                    </p>
                    <a href="{{ post.link }}" class="card-link stretched-link">{{ post.link_text ?? 'Weiterlesen' }} â€º</a>
                </div>
            </div>
        </div>
    {% if (loop.index % content.column_count) == 0 or loop.last %}</div>{% endif %}
    {% endfor %}
</div>