{
  "name": "wp_boilerplate-project",
  "version": "0.0.1",
  "description": "Based on Fabrica Dev Kit for Wordpress Project",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/winklr/wordpress_boilerplate.git"
  },
  "private": true,
  "author": "werk85 <moin@werk85.de> (http://www.werk85.de/)",
  "scripts": {
    "run": "gulp",
    "dc": "docker-compose",
    "sh": "docker-compose exec -u www-data wp /bin/bash",
    "shroot": "docker-compose exec wp /bin/bash",
    "wp": "docker-compose exec -u www-data -T wp wp",
    "logs": "docker-compose logs -f --tail='46' wp | sed -e \"s/ WARNING: .* into stderr: \\\"\\(NOTICE: PHP message: \\)\\{0,1\\}\\(\\[[a-zA-Z0-9 :\\-]\\{1,\\}\\]\\)\\{0,1\\} \\{0,1\\}\\(.*\\)\\\"/ ⚠️  $(tput setaf 3)\\3$(tput sgr0)/\"",
    "remove": "docker-compose down --volumes --rmi local",
    "wordmove": "docker-compose exec wordmove /bin/bash",
    "compose": "node ./scripts/dockerCompose.js"
  },
  "fabrica_dev_kit": {
    "scripts_info": {
      "run": "Run 'gulp'. Default task will watch and process source files.",
      "dc": "Run 'docker-compose', eg. 'wp_boilerplate dc ps'.",
      "sh": "Start shell on WP container.",
      "shroot": "Start shell as root on WP container.",
      "wp": "Run WP Cli. eg. 'wp_boilerplate wp option list' or 'wp_boilerplate wp -- --info'",
      "logs": "Tail WP container logs.",
      "remove": "Stop all project containers, remove their volumes and WP project image.",
      "wordmove": "Run wordmove command to push/pull data from/to remote wordpress instances"
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.26.3",
    "del": "^2.2.2",
    "expose-loader": "^0.7.5",
    "fancy-log": "^1.3.2",
    "gulp": "github:gulpjs/gulp#v4.0.0",
    "gulp-changed": "^1.3.2",
    "gulp-concat": "^2.6.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-filter": "^5.0.0",
    "gulp-flatten": "^0.3.1",
    "gulp-imagemin": "^3.0.3",
    "gulp-jshint": "^2.0.1",
    "gulp-postcss": "^6.2.0",
    "gulp-posthtml": "^2.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-tap": "^0.1.3",
    "gulp-uglify": "^3.0.1",
    "jshint": "^2.9.6",
    "js-yaml": "^3.12.0",
    "merge-stream": "^1.0.1",
    "path": "^0.12.7",
    "object-path": "^0.11.4",
    "postcss-each": "^0.9.3",
    "postcss-fontpath": "^0.3.0",
    "postcss-import": "^9.1.0",
    "postcss-mixins": "^5.4.0",
    "postcss-nested": "^1.0.0",
    "postcss-nested-props": "^1.1.5",
    "postcss-reporter": "^6.0.0",
    "postcss-simple-vars": "^3.0.0",
    "shelljs": "^0.8.3",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4",
    "webpack-stream": "^5.1.1",
    "yargs": "^12.0.5"
  }
}
